<UserControl x:Class="componenteRepaso.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:componenteRepaso"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="309*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="miTexto" Margin="16,0,16,13" TextWrapping="Wrap" Grid.ColumnSpan="2" KeyDown="e" Height="18" VerticalAlignment="Bottom"/>
        <ListBox x:Name="miLista" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="1" KeyDown="supr" Margin="16,24,16,0" Height="275" VerticalAlignment="Top"/>
        <Slider x:Name="miSlider" Margin="22,112,0,45" Orientation="Vertical" IsDirectionReversed="True" Grid.Row="1" Grid.Column="1" IsEnabled="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="22"/>

    </Grid>
</UserControl>
